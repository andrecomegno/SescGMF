<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="com.example.sescgmf.home.Home"
        android:label="home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_to_training"
            app:destination="@id/training"
            app:popUpTo="@id/home"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/profile"
        android:name="com.example.sescgmf.profile.Profile"
        android:label="profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/training"
        android:name="com.example.sescgmf.training.Training"
        android:label="training"
        tools:layout="@layout/fragment_training" >
        <action
            android:id="@+id/action_training_to_home"
            app:destination="@id/home"
            app:popUpTo="@id/home"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/lesson"
        android:name="com.example.sescgmf.lesson.Lesson"
        android:label="lesson"
        tools:layout="@layout/fragment_lesson" >
        <action
            android:id="@+id/action_lesson_to_eventEdit"
            app:destination="@id/eventEdit"
            app:popUpTo="@id/lesson"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/eventEdit"
        android:name="com.example.sescgmf.event.EventEdit"
        android:label="fragment_event_edit"
        tools:layout="@layout/fragment_event_edit" >
        <action
            android:id="@+id/action_eventEdit_to_lesson"
            app:destination="@id/lesson"
            app:popUpTo="@id/lesson"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/login"
        android:name="com.example.sescgmf.login.Login"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/home" />
    </fragment>
    <fragment
        android:id="@+id/welcome"
        android:name="com.example.sescgmf.welcome.Welcome"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome" >
        <action
            android:id="@+id/action_welcome_to_login"
            app:destination="@id/login" />
    </fragment>
</navigation>