<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Lesson">

    <LinearLayout
        android:id="@+id/calendar_lesson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_mont_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="previousMonthAction"
            android:text="@string/arrow_left"
            android:textColor="@color/dark_gray"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,VisualLintButtonSize" />

        <TextView
            android:id="@+id/calendar_month"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingTop="15dp"
            android:text="@string/calendar_month_year"
            android:textAlignment="center"
            android:textColor="@color/dark_gray"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_mont_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="nextMonthAction"
            android:text="@string/arrow_right"
            android:textColor="@color/dark_gray"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,VisualLintButtonSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/calendar_weeks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/week_sum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="SUM"
            android:textAlignment="center"
            android:textColor="@color/dark_gray"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/week_mon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="MON"
            android:textAlignment="center"
            android:textColor="@color/dark_gray"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/week_tue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="TUE"
            android:textAlignment="center"
            android:textColor="@color/dark_gray"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/week_wed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="WED"
            android:textAlignment="center"
            android:textColor="@color/dark_gray"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/week_thur"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="THUR"
            android:textAlignment="center"
            android:textColor="@color/dark_gray"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/week_fri"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="FRI"
            android:textAlignment="center"
            android:textColor="@color/dark_gray"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/week_sat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="SAT"
            android:textAlignment="center"
            android:textColor="@color/dark_gray"
            android:textSize="16sp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/register_lesson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>