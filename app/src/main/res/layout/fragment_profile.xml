<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".profile.Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="700dp"
                tools:ignore="TextSizeCheck">

                <ImageView
                    android:id="@+id/panel_top"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/im_top"
                    app:layout_constraintDimensionRatio="16:9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription,ImageContrastCheck" />
                <!--
                <ImageView
                    android:id="@+id/im_profile_background"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginBottom="85dp"
                    android:src="@drawable/circle_gradient_profile"
                    app:layout_constraintBottom_toBottomOf="@+id/panel_top"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription" />
                    -->

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/im_profile"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginBottom="50dp"
                    android:src="@drawable/im_profile"
                    app:layout_constraintBottom_toTopOf="@+id/pl_row_00"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/panel_top"
                    app:shapeAppearanceOverlay="@style/Circular" />

                <TextView
                    android:id="@+id/lb_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/lb_register_username"
                    android:textColor="@color/yellow"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/im_profile"
                    tools:ignore="TextContrastCheck" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/pl_row_00"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    app:cardBackgroundColor="@color/gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/panel_top" />

                <TextView
                    android:id="@+id/lb_account_sesc_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/lb_account_sesc"
                    android:textColor="@color/dark_gray"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pl_row_00" />

                <TextView
                    android:id="@+id/lb_base_unit"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/lb_base_unit"
                    android:textColor="@color/dark_gray"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lb_account_sesc_title" />

                <TextView
                    android:id="@+id/txt_unit_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/lb_base_unit_sesc"
                    android:textColor="@color/dark_gray"
                    android:textSize="15sp"
                    app:layout_constraintStart_toEndOf="@+id/lb_base_unit"
                    app:layout_constraintTop_toBottomOf="@+id/lb_account_sesc_title" />

                <TextView
                    android:id="@+id/lb_registration"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/lb_registration"
                    android:textColor="@color/dark_gray"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lb_base_unit"
                    tools:ignore="TextSizeCheck" />

                <TextView
                    android:id="@+id/txt_register_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/lb_register_number_username"
                    android:textColor="@color/dark_gray"
                    android:textSize="15sp"
                    app:layout_constraintStart_toEndOf="@+id/lb_registration"
                    app:layout_constraintTop_toBottomOf="@+id/txt_unit_name" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/pl_row_01"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="120dp"
                    app:cardBackgroundColor="@color/gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pl_row_00" />

                <TextView
                    android:id="@+id/lb_account_profile_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/lb_account_profile"
                    android:textColor="@color/dark_gray"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pl_row_01" />

                <TextView
                    android:id="@+id/lb_username"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/lb_username"
                    android:textColor="@color/dark_gray"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lb_account_profile_title"
                    tools:ignore="TextSizeCheck" />

                <TextView
                    android:id="@+id/txt_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/lb_register_username"
                    android:textColor="@color/dark_gray"
                    android:textSize="15sp"
                    app:layout_constraintStart_toEndOf="@+id/lb_username"
                    app:layout_constraintTop_toBottomOf="@+id/lb_account_profile_title" />

                <TextView
                    android:id="@+id/lb_email"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/lb_e_mail"
                    android:textColor="@color/dark_gray"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lb_username" />

                <TextView
                    android:id="@+id/txt_user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/lb_register_email"
                    android:textColor="@color/dark_gray"
                    android:textSize="15sp"
                    app:layout_constraintStart_toEndOf="@+id/lb_email"
                    app:layout_constraintTop_toBottomOf="@+id/txt_username" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/pl_row_02"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="130dp"
                    app:cardBackgroundColor="@color/gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pl_row_01" />

                <TextView
                    android:id="@+id/lb_title_linked_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/lb_linked_account"
                    android:textColor="@color/dark_gray"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pl_row_02" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/pl_row_03"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="135dp"
                    app:cardBackgroundColor="@color/gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pl_row_02" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_delete_account"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/bt_delete_account"
                    android:text="@string/bt_delete_account"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pl_row_03"
                    tools:ignore="VisualLintButtonSize,DuplicateSpeakableTextCheck" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
</ScrollView>